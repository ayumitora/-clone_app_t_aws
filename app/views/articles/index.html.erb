<h1>つぶやき一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>内容</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.content %></td>
      <td><%= link_to '詳細を確認する', article_path(article.id) %></td>
      <td><%= link_to "編集する", edit_article_path(article.id) %></td>
    </tr>
  <% end %>
</table>

<%= link_to '新しく呟く', new_article_path %>